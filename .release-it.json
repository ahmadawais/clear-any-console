	"safeBump": false,
	"hooks": {
		"after:bump": "auto-changelog && git add . && git commit -m ' ðŸ“– DOC: Update the changelog' && git push",
		"after:release": "echo 'SUCCESSFULLY RELEASED: ${name} v${version}.'"
	},
	"src": {
		"commitMessage": "ðŸ¦„ Release %s",
		"tagAnnotation": "ðŸ¦„ Release %s"
	},
	"git": {
